                                .form-group
                                    label.form-control-label Commentaire
                                    input(type="text" name="message" class="form-control" id="formGroupExampleInput" placeholder="Nom du code")
                            .col-lg-4
                            
                        button(type="submit").btn.btn-block.btn-primary.btn-lg.font-weight-medium.auth-form-btn Commenter
