extends base_html.pug

block style 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet")
    link(href='/themes/front/css/styles.css', rel="stylesheet")

block bodycontent 
    include partials/_navbar_front_html.pug
        header(class="bg-dark py-5") 
            div(class="container px-4 px-lg-5 my-5")
                div(class="text-center text-white")
                    h1(class="display-4 fw-bolder") Les applications de la communauté ePatriote
                    p(class="lead fw-normal text-white-50 mb-0") Retrouver sur la plateforme les applications conçues et réalisées par la communauté ePatriote
    section.py-5
        div(class="container px-4 px-lg-5 mt-5")
            div(class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center")
                block content  
    include partials/_footer_front_html.pug

block scripts
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js")
    script(src='/themes/front/js/scripts.js')
