extends ../backend_base_html.pug

block content
    .row
        div(class ='col-lg-12 grid-margin stretch-card')
            .card
                .card-body
                    h4.card-title Les utilisateurs
                        p.card-description Table des utilisateurs inscrits sur le site.
                            .template-demo
                                div(class='btn-group col-12" role="group" aria-label="Basic example')
                                    .text-center
                                        a(href="/users/new" class="btn btn-info my-4") 
                                            i(class='mdi mdi-keyboard-return') Ajouter un nouvel utilisateur
                    .table-responsive
                        table(class = "table table-bordered")
                            thead 
                                tr 
                                    th ID
                                    th Nom & Prénoms
                                    th Email
                                    th Modifier
                                    th Suppression
                            tbody 
                            for user in users
                                tr 
                                    td= user._id
                                    td= user.fullName
                                    td= user.email
                                    td 
                                        a(class="btn btn-outline-warning mt-auto" href="/users/update/" + user._id) Modifier
                                    td 
                                        a(class="btn btn-outline-danger mt-auto" href="/users/delete/" + user._id) Supprimer
                            else 
                                tr
                                    td(colspan="5") Aucun utilisateur trouvé
                                    








